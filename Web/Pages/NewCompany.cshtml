@page "{kind?}"
@model Web.Pages.NewCompanyModel
@{
    ViewData["Title"] = "New Company";
}

<h2>New Company</h2>

<form method="post" style="padding-bottom: 4rem;">
    <div class="mb-3">
        <label asp-for="CompanyName" class="form-label"></label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TIN" class="form-label"></label>
        <input asp-for="TIN" class="form-control" />
        <span asp-validation-for="TIN" class="text-danger"></span>
    </div>
    <fieldset class="border p-3 mb-3">
        <legend class="w-auto">Address</legend>
        <div class="mb-3">
            <label asp-for="StreetAddress" class="form-label"></label>
            <input asp-for="StreetAddress" class="form-control" />
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="State" class="form-label"></label>
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PostalCode" class="form-label"></label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Address Kinds</label>
            <div>
                @foreach (var kind in Model.AllAddressKinds)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="SelectedAddressKinds" value="@kind" id="kind_@kind" @(Model.SelectedAddressKinds.Contains(kind) ? "checked" : "") />
                        <label class="form-check-label" for="kind_@kind">@kind.ToString()</label>
                    </div>
                }
            </div>
            <span asp-validation-for="SelectedAddressKinds" class="text-danger"></span>
        </div>
    </fieldset>
    <button type="submit" class="btn btn-primary">Create Company</button>
    <a asp-page="/Companies" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
